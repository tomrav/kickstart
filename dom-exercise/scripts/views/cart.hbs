<h2>Ã  la carte</h2>
<div class="table-container" id="cart">
    {{> cartHeaderRow data=this rowStyle="table-header" cellStyle="cell" sortIcon="sort-icon" }}
    {{#each this.items}}
        {{> cartRow data=this rowStyle="table-row" cellStyle="cell" }}
    {{/each}}
</div>
<div class="clearfix cart-total" id="cartTotal">
    <div class="right">
        <strong>Total:</strong>
        <span>
            ${{cartTotal this}}
        </span>
    </div>
    <div class="coupon-container">
        <label for="couponInput">
            Apply Coupon:
            <input class="coupon-input" type="text" id="couponInput" placeholder="enter coupon code here"/>
        </label>
        <button class="addToCartButton" id="submitCoupon">
            Submit!
        </button>
    </div>
</div>
